# Azure AD App Registration (required)
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_TENANT_ID=your-tenant-id
AZURE_REDIRECT_URI=http://localhost:8365/auth/callback

# Local encryption key (required)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-for-encryption-minimum-32-chars

# Optional settings (defaults shown)
# DATABASE_URL=sqlite+aiosqlite:///./data/ms365_access.db
# APP_PORT=8365
# APP_HOST=127.0.0.1
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Timezone for calendar display (default: UTC)
# LOCAL_TIMEZONE=America/New_York
